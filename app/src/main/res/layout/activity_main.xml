<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/gray"
              android:orientation="vertical">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <FrameLayout
                android:background="@color/white"
                android:id="@+id/main_content"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="1">
        </FrameLayout>

        <LinearLayout
                android:id="@+id/webus_bottom_layout"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal">
            <RelativeLayout android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                    >
                <ImageView
                        android:id="@+id/tab0_View"
                        android:layout_width="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/icon_home_yes"
                        android:layout_height="match_parent"
                        >
                </ImageView>
                <View android:layout_width="match_parent"
                      android:layout_height="@dimen/dp_1"
                      android:layout_alignParentBottom="true"
                      android:id="@+id/tab0_bottom_view"
                      android:background="@color/color_saffron"/>
            </RelativeLayout>
            <View android:layout_width="@dimen/dp_0_0_5"
                  android:layout_height="match_parent"
                  android:background="@color/half_gray"/>

            <RelativeLayout android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                    >
                <ImageView
                        android:id="@+id/tab1_View"
                        android:layout_width="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/icon_xunlian_no"
                        android:layout_height="match_parent"
                        >
                </ImageView>
                <View android:layout_width="match_parent"
                      android:layout_height="@dimen/dp_1"
                      android:layout_alignParentBottom="true"
                      android:id="@+id/tab1_bottom_view"
                      android:visibility="gone"
                      android:background="@color/color_saffron"/>
            </RelativeLayout>
            <View android:layout_width="@dimen/dp_0_0_5"
                  android:layout_height="match_parent"
                  android:background="@color/half_gray"/>

            <RelativeLayout android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                    >
                <ImageView
                        android:id="@+id/tab2_View"
                        android:layout_width="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/icon_my_no"
                        android:layout_height="match_parent"
                        >
                </ImageView>
                <View android:layout_width="match_parent"
                      android:layout_height="@dimen/dp_1"
                      android:layout_alignParentBottom="true"
                      android:id="@+id/tab2_bottom_view"
                      android:visibility="gone"
                      android:background="@color/color_saffron"/>
            </RelativeLayout>
            <View android:layout_width="@dimen/dp_0_0_5"
                  android:layout_height="match_parent"
                  android:background="@color/half_gray"/>

            <RelativeLayout android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                    >
                <ImageView
                        android:id="@+id/tab3_View"
                        android:layout_width="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/icon_my_no"
                        android:layout_height="match_parent"
                        >
                </ImageView>
                <View android:layout_width="match_parent"
                      android:layout_height="@dimen/dp_1"
                      android:layout_alignParentBottom="true"
                      android:id="@+id/tab3_bottom_view"
                      android:visibility="gone"
                      android:background="@color/color_saffron"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>