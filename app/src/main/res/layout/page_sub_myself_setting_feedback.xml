<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/title_rl"
        style="@style/title_rl_style" >

        <ImageView
            android:id="@+id/title_back_img"
            style="@style/title_left_bt_style" />

        <TextView
            android:id="@+id/textView"
            android:text="意见反馈"
            style="@style/title_center_tv_style" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/feedback_content"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dp_158"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip"
            android:layout_marginTop="12.0dip"
            android:gravity="top"
            android:textColorHint="@color/half_gray"
            android:hint="我们的成长离不开您的支持，请描述您的详细需求和服务体验的反馈，我们会尽快帮您解决"
            android:imeOptions="actionNext"
            android:maxLength="500"
            android:padding="10.0dip"
            android:textColor="@android:color/black"
            android:textSize="@dimen/sp_16" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:padding="@dimen/dp_8" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请输入3-50个字符!"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/hint_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:text="0/200"
                android:textColor="@android:color/black" />
        </RelativeLayout>

        <Button
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginRight="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_12"
            android:background="@drawable/button_blue_shape"
            android:gravity="center"
            android:paddingBottom="@dimen/dp_8"
            android:paddingLeft="@dimen/dp_44"
            android:paddingRight="@dimen/dp_44"
            android:paddingTop="@dimen/dp_8"
            android:text="提交"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>