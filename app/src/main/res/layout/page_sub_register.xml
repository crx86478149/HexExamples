<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

    <RelativeLayout
            android:id="@+id/title_rl"
            style="@style/title_rl_style"
            >

        <ImageView
                android:id="@+id/title_back_img"
                style="@style/title_left_bt_style"/>

        <TextView
                android:id="@+id/center_title_tv"
                android:text="注册"
                style="@style/title_center_tv_style"/>
    </RelativeLayout>

    <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/title_rl"
            android:background="@color/white"
            android:orientation="vertical">

        <EditText
                android:id="@+id/nickname_et"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="30dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:hint="请输入昵称"
                android:padding="10dp"
                android:imeOptions="actionNext"
                android:textColor="@android:color/black"
                android:layout_centerVertical="true"
                android:textSize="@dimen/sp_14"/>
        <EditText
                android:id="@+id/login_mobile_et"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="15dp"
                android:padding="10dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:hint="请输入手机号"
                android:imeOptions="actionNext"
                android:textColor="@android:color/black"
                android:layout_centerVertical="true"
                android:textSize="@dimen/sp_14"/>
        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="15dp"
                        android:gravity="center_vertical"
                >
            <Button
                    android:id="@+id/regist_verification_bt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@color/color_saffron"
                    android:text="获取验证码"
                    android:padding="10dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_14"/>
            <EditText
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:hint="请输入四位验证码"
                    android:imeOptions="actionNext"
                    android:id="@+id/code_et"
                    android:padding="10dp"
                    android:textSize="14sp"
                    android:layout_toLeftOf="@id/regist_verification_bt"
                    android:layout_alignParentLeft="true"
                    android:textColor="@android:color/black"
                    android:layout_marginRight="20dp"
                    android:layout_centerVertical="true"/>
        </RelativeLayout>
        <EditText
                android:id="@+id/psd_et"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:hint="请输入密码"
                android:padding="10dp"
                android:imeOptions="actionNext"
                android:textColor="@android:color/black"
                android:layout_centerVertical="true"
                android:textSize="@dimen/sp_14"/>
        <EditText
                android:id="@+id/invation_code_et"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:hint="填写邀请码"
                android:padding="10dp"
                android:imeOptions="actionNext"
                android:textColor="@android:color/black"
                android:layout_centerVertical="true"
                android:textSize="@dimen/sp_14"/>
        <Button
                android:id="@+id/register_next_bt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativeLayout"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:layout_marginTop="@dimen/dp_32"
                android:background="@drawable/button_blue_shape"
                android:gravity="center"
                android:paddingBottom="@dimen/dp_12"
                android:paddingTop="@dimen/dp_12"
                android:text="注册"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_18"/>
        <TextView
                android:id="@+id/login_next_bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativeLayout"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="100dp"
                android:layout_marginTop="@dimen/dp_20"
                android:gravity="center"
                android:layout_gravity="right"
                android:paddingBottom="@dimen/dp_12"
                android:paddingTop="@dimen/dp_12"
                android:text="已有账号, 马上登录"
                android:textColor="@color/gray"
                android:textSize="@dimen/sp_18"/>
    </LinearLayout>

</RelativeLayout>